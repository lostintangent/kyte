{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "cz": "commit",
    "format": "prettier --write '**/*.js{on,}'",
    "precommit": "lint-staged",
    "release":
      "npm run build && lerna publish -m 'chore(release): Publishing release(s)'"
  },
  "commitlint": {
    "extends": ["@commitlint/config-angular"]
  },
  "lint-staged": {
    "*.js{on,}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "@commitlint/cli": "^4.2.2",
    "@commitlint/config-angular": "^5.0.0",
    "@commitlint/prompt-cli": "^4.2.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.1",
    "husky": "^0.14.3",
    "lerna": "^2.4.0",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.0",
    "webpack": "^3.8.1"
  }
}
